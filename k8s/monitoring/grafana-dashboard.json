{
  "dashboard": {
    "title": "Sentiment Analysis Production Monitoring",
    "tags": ["sentiment-analysis", "ml", "production"],
    "timezone": "browser",
    "schemaVersion": 27,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "Total Predictions (Last 24h)",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(increase(sentiment_predictions_total[24h]))",
            "legendFormat": "Total Predictions"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 1000, "color": "yellow"},
                {"value": 10000, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Prediction Rate (req/s)",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(sentiment_predictions_total[5m]))",
            "legendFormat": "Requests/sec"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "decimals": 2,
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "red"},
                {"value": 5, "color": "yellow"},
                {"value": 15, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Model Status",
        "type": "stat",
        "targets": [
          {
            "expr": "sentiment_model_loaded",
            "legendFormat": "Model Loaded"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
        "options": {
          "graphMode": "none",
          "colorMode": "background"
        },
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"value": 1, "text": "LOADED", "color": "green"},
              {"value": 0, "text": "NOT LOADED", "color": "red"}
            ]
          }
        }
      },
      {
        "id": 4,
        "title": "Error Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(sentiment_errors_total[5m]))",
            "legendFormat": "Errors/sec"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "decimals": 3,
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 0.01, "color": "yellow"},
                {"value": 0.1, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Predictions by Sentiment",
        "type": "timeseries",
        "targets": [
          {
            "expr": "sum(rate(sentiment_predictions_total{sentiment=\"POSITIVE\"}[5m]))",
            "legendFormat": "Positive"
          },
          {
            "expr": "sum(rate(sentiment_predictions_total{sentiment=\"NEGATIVE\"}[5m]))",
            "legendFormat": "Negative"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "options": {
          "tooltip": {"mode": "multi"},
          "legend": {"displayMode": "list", "placement": "bottom"}
        },
        "fieldConfig": {
          "defaults": {
            "custom": {"lineWidth": 2, "fillOpacity": 10},
            "color": {"mode": "palette-classic"},
            "unit": "reqps"
          }
        }
      },
      {
        "id": 6,
        "title": "Sentiment Distribution",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum(increase(sentiment_predictions_total[24h])) by (sentiment)",
            "legendFormat": "{{sentiment}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "options": {
          "legend": {"displayMode": "table", "placement": "right"},
          "pieType": "donut",
          "displayLabels": ["percent"]
        }
      },
      {
        "id": 7,
        "title": "API Latency (p50, p95, p99)",
        "type": "timeseries",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(sentiment_prediction_duration_seconds_bucket[5m]))",
            "legendFormat": "p50"
          },
          {
            "expr": "histogram_quantile(0.95, rate(sentiment_prediction_duration_seconds_bucket[5m]))",
            "legendFormat": "p95"
          },
          {
            "expr": "histogram_quantile(0.99, rate(sentiment_prediction_duration_seconds_bucket[5m]))",
            "legendFormat": "p99"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
        "options": {
          "tooltip": {"mode": "multi"},
          "legend": {"displayMode": "list", "placement": "bottom"}
        },
        "fieldConfig": {
          "defaults": {
            "custom": {"lineWidth": 2},
            "color": {"mode": "palette-classic"},
            "unit": "s"
          }
        }
      },
      {
        "id": 8,
        "title": "Confidence Score Distribution",
        "type": "heatmap",
        "targets": [
          {
            "expr": "sum(rate(sentiment_prediction_confidence_bucket[5m])) by (le)",
            "legendFormat": "{{le}}",
            "format": "heatmap"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
        "options": {
          "calculate": false,
          "cellGap": 2,
          "color": {
            "mode": "scheme",
            "scheme": "Spectral",
            "steps": 64
          }
        }
      },
      {
        "id": 9,
        "title": "Batch Size Distribution",
        "type": "timeseries",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(sentiment_batch_size_bucket[5m]))",
            "legendFormat": "Median Batch Size"
          },
          {
            "expr": "histogram_quantile(0.95, rate(sentiment_batch_size_bucket[5m]))",
            "legendFormat": "p95 Batch Size"
          }
        ],
        "gridPos": {"h": 6, "w": 12, "x": 0, "y": 20},
        "options": {
          "tooltip": {"mode": "multi"},
          "legend": {"displayMode": "list", "placement": "bottom"}
        },
        "fieldConfig": {
          "defaults": {
            "custom": {"lineWidth": 2},
            "unit": "short"
          }
        }
      },
      {
        "id": 10,
        "title": "Error Types",
        "type": "bargauge",
        "targets": [
          {
            "expr": "sum(increase(sentiment_errors_total[24h])) by (error_type)",
            "legendFormat": "{{error_type}}"
          }
        ],
        "gridPos": {"h": 6, "w": 12, "x": 12, "y": 20},
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient"
        },
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "continuous-RdYlGr"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 10, "color": "yellow"},
                {"value": 100, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 11,
        "title": "HTTP Request Rate",
        "type": "timeseries",
        "targets": [
          {
            "expr": "sum(rate(http_requests_total[5m])) by (method, handler)",
            "legendFormat": "{{method}} {{handler}}"
          }
        ],
        "gridPos": {"h": 6, "w": 12, "x": 0, "y": 26},
        "options": {
          "tooltip": {"mode": "multi"},
          "legend": {"displayMode": "list", "placement": "bottom"}
        }
      },
      {
        "id": 12,
        "title": "Average Confidence by Sentiment",
        "type": "gauge",
        "targets": [
          {
            "expr": "avg(sentiment_prediction_confidence{sentiment=\"POSITIVE\"})",
            "legendFormat": "Positive Confidence"
          },
          {
            "expr": "avg(sentiment_prediction_confidence{sentiment=\"NEGATIVE\"})",
            "legendFormat": "Negative Confidence"
          }
        ],
        "gridPos": {"h": 6, "w": 12, "x": 12, "y": 26},
        "options": {
          "showThresholdLabels": false,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "min": 0,
            "max": 1,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "red"},
                {"value": 0.7, "color": "yellow"},
                {"value": 0.85, "color": "green"}
              ]
            }
          }
        }
      }
    ]
  }
}
